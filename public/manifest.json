{
  "manifest_version": 3,
  "name": "Size Compare",
  "version": "1.0",
  "description": "Compare clothing measurements to your own items.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.grailed.com/listings/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
